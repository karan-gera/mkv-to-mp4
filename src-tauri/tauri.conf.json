{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MKV to MP4",
  "version": "0.1.0",
  "identifier": "com.mkv-to-mp4.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "mkv2mp4",
        "width": 420,
        "height": 480,
        "resizable": true,
        "minWidth": 360,
        "minHeight": 400,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
